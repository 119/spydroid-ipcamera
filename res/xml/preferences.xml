<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Sound streaming">

        <CheckBoxPreference
                android:key="stream_sound"
                android:title="Sound streaming"
                android:defaultValue="true"
                android:summary="AMRNB seems buggy on VLC 2, you might need to disable sound streaming" />

    </PreferenceCategory>
    
        <PreferenceCategory
            android:title="Video streaming">

        <CheckBoxPreference
            android:key="stream_video"
            android:title="Video streaming"
            android:defaultValue="true"
            android:summary="Enable/Disable streaming of video" />
            
        <ListPreference
            android:title="Default video encoder"
            android:key="video_encoder"
            android:defaultValue="1"
            android:summary="Two video compression algorithms are available: H.263 and H.264"
            android:entries="@array/listEncoderArray"
            android:entryValues="@array/listEncoderValues" />

    </PreferenceCategory>

</PreferenceScreen>